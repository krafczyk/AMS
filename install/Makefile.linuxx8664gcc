-L$(NAGDIR) -lnaggcc64   \
-L$(AMSLIB)  -lamsut   \
-L$(CERNDIR)/lib   $(CERNLIBS) \
-L$(ROOTSYS)/lib -lRoot -lcrypt -lkrb5 -lk5crypto -lkrb5support -lssl -lcrypto  -lcom_err -lfreetype -lncurses  -ldl    -lpcre -lncurses\
$(FORTRAN2_LIBS) $(FORTRAN_LIBS)  $(PFLAGS) 

