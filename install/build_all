#!/bin/tcsh
if ( "$1" != "" )  then
setenv AMSWD $1
endif

if ( "$2" != "" )  then
setenv ADDBUILDNO 1
else
unsetenv ADDBUILDNO
endif

unsetenv MARCH
unsetenv PGTRACK
setenv ECALBDT 1
source amsvar.icc64
source g4i.icc64
gmake allg4
source amsvar.gcc64
source g4i.gcc64
gmake allp
gmake server
source amsvar.icc32
gmake allold 
setenv MARCH linuxicc26
gmake -j
gmake producer -i
unsetenv MARCH
source amsvar.gcc32
source g4i.gcc32
gmake allg4
gmake server

setenv PGTRACK 1
source ./amsvar.icc64
source ./g4i.icc64
gmake allg4
source amsvar.gcc32
source g4i.gcc32
gmake allg4
gmake server
source ./amsvar.gcc64
source g4i.gcc64
gmake allp
source amsvar.icc32
gmake allold 
setenv MARCH linuxicc26
gmake -j
gmake producer -i
unsetenv MARCH
setenv PGTRACK 1
setenv G4AMS 1
source amsvar.icc64
source g4i.icc64
gmake  -j
gmake producer -i
unsetenv G4AMS
unsetenv PGTRACK

