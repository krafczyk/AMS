#!/bin/tcsh
if ( "$1" != "" )  then
setenv AMSWD $1
endif

if ( "$2" != "" )  then
setenv ADDBUILDNO 1
else
unsetenv ADDBUILDNO
endif

unsetenv MARCH
setenv PGTRACK 1
source /Offline/vdev/install/amsvar.icc64
source /Offline/vdev/install/g4i
gmake allg4
source /Offline/vdev/install/amsvar.gcc32
source /Offline/vdev/install/g4i
gmake allg4
gmake server
source /Offline/vdev/install/amsvar.gcc64
gmake allp
source /Offline/vdev/install/amsvar.icc32
gmake allold 
setenv MARCH linuxicc26
gmake -j
gmake producer -i
unsetenv MARCH
setenv PGTRACK 1
setenv G4AMS 1
source /Offline/vdev/install/amsvar.icc64
source /Offline/vdev/install/g4i
gmake  -j
gmake producer -i
unsetenv G4AMS
unsetenv PGTRACK
unsetenv MARCH
source /Offline/vdev/install/amsvar.icc64
source /Offline/vdev/install/g4i
gmake allg4
source /Offline/vdev/install/amsvar.gcc64
gmake allp
gmake server
source /Offline/vdev/install/amsvar.icc32
gmake allold 
setenv MARCH linuxicc26
gmake -j
gmake producer -i
unsetenv MARCH
source /Offline/vdev/install/amsvar.gcc32
source /Offline/vdev/install/g4i
gmake allg4
gmake server

