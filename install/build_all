#!/bin/tcsh
if ( "$1" != "" )  then
setenv AMSWD $1
endif

if ( "$2" != "" )  then
setenv ADDBUILDNO 1
else
unsetenv ADDBUILDNO
endif

unsetenv MARCH
unsetenv PGTRACK
source /Offline/vdev/install/amsvar.icc64
source /Offline/vdev/install/g4i
gmake allg4
source /Offline/vdev/install/amsvar.gcc64
gmake allp
source /Offline/vdev/install/amsvar.icc32
gmake allold 
setenv MARCH linuxicc26
gmake -j
gmake producer -i
unsetenv MARCH
source /Offline/vdev/install/amsvar.gcc32
source /Offline/vdev/install/g4i
gmake allg4
setenv PGTRACK 1
source /Offline/vdev/install/amsvar.icc64
source /Offline/vdev/install/g4i
gmake allg4
source /Offline/vdev/install/amsvar.gcc32
source /Offline/vdev/install/g4i
gmake allg4
source /Offline/vdev/install/amsvar.gcc64
gmake allp
source /Offline/vdev/install/amsvar.icc32
gmake allold 
setenv MARCH linuxicc26
gmake -j
gmake producer -i
unsetenv MARCH
