if $OS == "Linux"  then
 setenv G4SYSTEM Linux-g++
endif

if $OS == "OSF1" then
  setenv G4SYSTEM "DEC-cxx"
endif

setenv G4INSTALL /afs/cern.ch/exp/ams/Offline/geant4.0.1 
setenv G4LIB $G4INSTALL/lib/$OS
setenv G4_NO_VERBOSE 1
setenv CLHEP_BASE_DIR  /afs/cern.ch/sw/lhcxx/specific/$OS/CLHEP/new
setenv G4USE_STL 1
setenv  G4WORKDIR /amsdat1/scratch/choutko
#setenv G4VIS_BUILD_OPENGLXM_DRIVER     1  # Uses OpenGL and Motif
#setenv G4VIS_USE_OPENGLXM     1
setenv G4LEVELGAMMADATA $G4INSTALL/data/PhotonEvaporation
setenv G4LEDATA $G4INSTALL/data/G4EMLOW0.2
setenv NeutronHPCrossSections $G4INSTALL/data/G4NDL0.1
