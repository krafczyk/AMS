STANDALONE:=$(EXE)gbatch$(PG).exe 

$(STANDALONE):	$(OBJECTS)
	$(LD)  -o $(AMS_EXE) $(OBJECTS) $(TIMEL)   $(LDFLAGS) $(LDLIBS) $(XLDFLAGS) 
#-lgfortran


gbatch:  $(STANDALONE)

CLIENT=$(EXE)gbatch-orbit$(PG).exe

producer: 	$(CLIENT)

#                   Orbit-C      Orbit-C++   gbatch
$(CLIENT):          $(OBJECTCO) $(OBJECTCL) $(OBJECTSC) $(BIN)ctype.o
	@if ! [ -d $(EXE) ] ; then mkdir -p $(EXE); fi; echo "Creating the $(EXE) directory ...."
	$(LD)  -o $@  $(OBJECTCO)  $(OBJECTCL) $(OBJECTSC) $(LDFLAGSSTATICIDL) $(TIMEL)   $(LDFLAGS) $(LDLIBS) $(XLDFLAGS) 
#-lgfortran


AMS_EXE       = $(EXE)gbatch.exe
.PHONY :     compile depend 
.PHONY :     touch_depend
compile:= $(AMS_EXE)





