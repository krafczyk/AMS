ifeq ($(ARCH),linuxicc)
  INTELDIR=/opt/intel/
  INTELVER=Compiler/11.0/069/
  INTELOPT=-axsse4.2 
  FF=$(INTELDIR)/$(INTELVER)/bin/ia32/ifort -W0 -m32 $(INTELOPT)  -vec-report0 $(PARALLEL)
